	<context:component-scan base-package="aop_p.webToon"/>
	<context:component-scan base-package="aop_p.adv"/>
	
	<aop:config>
		<aop:aspect ref="FigureAdvice">
			<aop:after method="circle" 
			pointcut="execution(public double aop_p.webToon.Figure.circle(double)) &amp;&amp; args(radius)" />
			<aop:before method="rectangle" 
			pointcut="execution(public double aop_p.webToon.Figure.rectangle(double, double)) &amp;&amp; args(width, height)" />
			<aop:before method="triangle"
			 pointcut="execution(public double aop_p.webToon.Figure.triangle(double, double, double)) &amp;&amp; args(base, height, hypotenuse)" />
		</aop:aspect>
	</aop:config>

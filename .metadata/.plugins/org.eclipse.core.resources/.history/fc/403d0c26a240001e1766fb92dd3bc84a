package aaa.controll;

import java.util.HashMap;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CookieValue;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.servlet.ModelAndView;

import jakarta.servlet.http.Cookie;
import jakarta.servlet.http.HttpServletResponse;

@Controller
@RequestMapping("cookie")
public class TestController {
	
	@RequestMapping("test1")
	@ResponseBody
	String make1(HttpServletResponse response) {
		
		response.addCookie(new Cookie("pid","aaa"));
		response.addCookie(new Cookie("pw","1111"));
		return "쿠키생성1";
	}
	
	@RequestMapping("testview")
	ModelAndView testview(
			@CookieValue(value="pid", defaultValue = "aaa" )String pid,
			@CookieValue(value="pw", defaultValue = "1234" )int pw){
		ModelAndView mav = new ModelAndView("cookie/testview");
		mav.addObject("pid",pid);
		mav.addObject("pw",pw);

		return mav;
	}
	
	@RequestMapping("testviewReg")
	String testviewReg( 
			@ModelAttribute("id") String id,
			@ModelAttribute("password") String password,
			@ModelAttribute("password1") String password1,
			@ModelAttribute("pname") String pname,
			@ModelAttribute("email") String email) {
		System.out.println("id:"+id);
		System.out.println("password:"+password);
		System.out.println("password1:"+password1);
		System.out.println("pname:"+pname);
		System.out.println("email:"+email);
		return "req/memberReg";
	}
	
}
